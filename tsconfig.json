{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "declaration": true,
        "noImplicitAny": false,
        "rootDirs": ["src", "node_modules"],
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "rootDir": "src",
        "removeComments": true,
        "outDir": "dist",
        "incremental": true
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
}
