{
  "name": "fs-read-data",
  "version": "1.0.2",
  "description": "Reads files in multiple formats (json, yaml, toml, ini, js) into a JavaScript object",
  "keywords": [
    "json",
    "yaml",
    "toml",
    "ini",
    "file",
    "read",
    "fs"
  ],
  "author": "Shishir Ramam",
  "repository": "tufan-io/fs-read-data",
  "license": "Apache-2.0",
  "private": false,
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "read-data": "dist/cli.js",
    "fs-read-data": "dist/cli.js"
  },
  "files": [
    "dist",
    "docs"
  ],
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "staged-mods-ok": "git-mods --staged_ok",
    "no-mods": "git-mods",
    "clean": "rimraf build .nyc_output coverage",
    "clean:dist": "rimraf dist",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "compile:build": "tsc",
    "compile:dist": "tsc -p tsconfig.dist.json",
    "compile:watch": "tsc -w",
    "sh": "npm-sh",
    "secure": "nsp check",
    "check": "npm outdated",
    "check-coverage": "nyc check-coverage --lines 95 --functions 95 --branches 95 --statements 95",
    "coveralls-report": "nyc report --reporter=text-lcov | coveralls",
    "test-with-cover": "nyc -r html -r text-summary ava --verbose",
    "test-without-cover": "ava",
    "build": "npm-run-batch",
    "build:dist": "run-batch",
    "build:watch": "cross-env NODE_ENV=production run-batch",
    "pkg-ok": "pkg-ok",
    "precommit": "run-batch",
    "prepush": "run-batch"
  },
  "run-batch": {
    "build": [
      "clean",
      "lint",
      "compile:build",
      "test-with-cover"
    ],
    "build:watch": [
      "compile:watch"
    ],
    "build:dist": [
      "build",
      "check-coverage",
      "clean:dist",
      "compile:dist",
      "pkg-ok"
    ],
    "precommit": [
      "build:dist",
      "staged-mods-ok"
    ],
    "prepush": [
      "build:dist",
      "secure",
      "no-mods"
    ]
  },
  "devDependencies": {
    "@types/circular-json": "^0.4.0",
    "@types/node": "^9.6.0",
    "@types/semver": "^5.5.0",
    "ava": "^0.25.0",
    "commander": "^2.15.1",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.17",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^2.1.0",
    "execa": "^0.10.0",
    "git-mods": "^1.0.8",
    "graceful-fs": "^4.1.11",
    "husky": "^0.14.3",
    "mkdirp": "^0.5.1",
    "node-emoji": "^1.5.1",
    "npm-run-batch": "0.0.6",
    "nsp": "^3.2.1",
    "nyc": "^11.6.0",
    "pkg-ok": "^2.1.0",
    "rimraf": "^2.6.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "@types/chalk": "^2.2.0",
    "awaiting": "^3.0.0",
    "chalk": "^2.3.2",
    "ini": "^1.3.5",
    "js-yaml": "^3.11.0",
    "runtime-engine-check": "^1.0.0",
    "semver": "^5.5.0",
    "toml": "^2.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": [
      "build/**/test.js",
      "build/**/test/specs/**/*.js"
    ],
    "source": [
      "build/**/*.js"
    ]
  },
  "nyc": {
    "exclude": [
      "build/**/test/**/*.*",
      "build/**/test.js",
      "dist"
    ]
  }
}
